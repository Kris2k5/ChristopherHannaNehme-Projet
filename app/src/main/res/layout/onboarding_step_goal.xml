<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_xl"
        android:text="@string/step_goal"
        android:textAppearance="?attr/textAppearanceTitleLarge"
        android:textColor="@color/text_primary" />

    <RadioGroup
        android:id="@+id/rgGoal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/rbLoseWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_md"
            android:text="@string/goal_lose_weight"
            android:textAppearance="?attr/textAppearanceBodyLarge" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/rbMaintain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_md"
            android:text="@string/goal_maintain"
            android:textAppearance="?attr/textAppearanceBodyLarge" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/rbGainMuscle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_md"
            android:text="@string/goal_gain_muscle"
            android:textAppearance="?attr/textAppearanceBodyLarge" />

    </RadioGroup>

</LinearLayout>
