<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_xl"
        android:text="@string/step_activity"
        android:textAppearance="?attr/textAppearanceTitleLarge"
        android:textColor="@color/text_primary" />

    <RadioGroup
        android:id="@+id/rgActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/rbSedentary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_md"
            android:text="@string/activity_sedentary"
            android:textAppearance="?attr/textAppearanceBodyLarge" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/rbLightlyActive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_md"
            android:text="@string/activity_lightly_active"
            android:textAppearance="?attr/textAppearanceBodyLarge" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/rbModeratelyActive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_md"
            android:text="@string/activity_moderately_active"
            android:textAppearance="?attr/textAppearanceBodyLarge" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/rbVeryActive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_md"
            android:text="@string/activity_very_active"
            android:textAppearance="?attr/textAppearanceBodyLarge" />

    </RadioGroup>

</LinearLayout>
